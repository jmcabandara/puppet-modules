<%- if @app =~ /^https/i -%>
    SSLProxyEngine On
<%- end -%>
ProxyRequests Off
ProxyPreserveHost On
ProxyAddHeaders <%= @proxyaddheaders %>

ProxyPass /socket.io/1/websocket/ <%= @app.gsub(/^https?/,'ws').gsub(/\/$/,'') %>/socket.io/1/websocket/ retry=0
ProxyPass / <%= @app.gsub(/\/$/, '') %>/ retry=0 nocanon
ProxyPassReverse / <%= @app.gsub(/\/$/, '') %>/
