<Location <%= @location %>>
        SetHandler ldap-status
        Require local
<% @require_ip.each do |ip| -%>
        Require ip <%= ip %>
<% end -%>
<% @require_host.each do |host| -%>
        Require host <%= host %>
<% end -%>
</Location>

LDAPTrustedGlobalCert CA_DER /etc/ssl/certs/ca-certificates.crt

