Version = 1.2
<Listener l>
        Port = <%= @port %>
        IPv4 = true
        IPv6 = <% if @ipv6 %>true<% else %>false<% end %>
        SSL = <% if @ssl %>true<% else %>false<% end %>
<% if @host -%>
        Host = <%= @host %>
<% end -%>
</Listener>
<% if @partyline -%>
LoadModule = partyline
<% end -%>
<% if @webadmin -%>
LoadModule = webadmin
<% end -%>

